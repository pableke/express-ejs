
<div class="jumbotron m-4">
	<h5><%=i18n.msgFormLogin%></h5>
	<hr class="my-4"/>

	<form id="pass" method="post" action="/user/pass.html">
		<div class="input-group">
			<label for="oldPass" class="required"><%=i18n.lblClaveAct%>:</label>
			<input type="password" id="oldPass" name="oldPass" value="" size="35" maxlength="200" class="form-control" tabindex="1" title="@titUsuario;" placeholder="********" />
			<div class="input-group-append"><span class="input-group-text" id="basic-addon2"><i class="fas fa-key"></i></span></div>
			<span class="msg-error"><%=msgs.oldPass%></span>
		</div>
		<div class="input-group">
			<label for="clave" class="required"><%=i18n.lblNewClave%>:</label>
			<input type="password" id="clave" name="clave" value="" size="35" maxlength="200" class="form-control" tabindex="2" title="@titClave;" placeholder="********" />
			<div class="input-group-append"><span class="input-group-text" id="basic-addon2"><i class="fas fa-ellipsis-h"></i></span></div>
			<span class="msg-error"><%=msgs.clave%></span>
		</div>
		<div class="input-group">
			<label for="reclave" class="required"><%=i18n.lblReClave%>:</label>
			<input type="password" id="reclave" name="reclave" value="" size="35" maxlength="200" class="form-control" tabindex="3" title="@titClave;" placeholder="********" />
			<div class="input-group-append"><span class="input-group-text" id="basic-addon2"><i class="fas fa-ellipsis-h"></i></span></div>
			<span class="msg-error"><%=msgs.reclave%></span>
		</div>

		<hr/>
		<button type="submit" class="btn btn-primary" tabindex="100" title="@titAcceder;"><%=i18n.lblGuardar%> &raquo;</button>
		<button type="reset" class="btn btn-light ml-2" tabindex="102" title="@titRestaurar;">&olarr; <%=i18n.lblLimpiar%></button>
	</form>
</div>
