	</table>

	<div class="navbar">
		<a href="#tab-0" class="btn btn-primary"><i class="fas fa-angle-double-left licon"></i>Volver</a>
		<a href="#next-tab" class="btn btn-success create-data">Nuevo <i class="fas fa-solid fa-plus ricon"></i></a>
		<a href="#reset" class="btn btn-danger"><i class="fas fa-solid fa-trash licon"></i>Borrar</a>
	</div>
</div>

