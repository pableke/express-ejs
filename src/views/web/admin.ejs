		</thead>
		<tbody id="pruebas-row" class="hide">
			<tr class="tb-data">
				<td class="textc">@count;</td>
				<td><a href="#find">@nombre_i18n;</a></td>
				<td><a href="#find-padre">@padre_i18n;</a></td>
				<td>@titulo_i18n;</td>
				<td><a href="@enlace;" title="@titulo;">@enlace;</a></td>
				<td>@tipo_i18n;</td>
				<td class="textr">@orden;</td>
				<td class="textr">@imp_i18n;</td>
				<td class="textc">@creado_i18n;</td>
				<td class="textc">
					<a href="#find"><i class="fas fa-search icon"></i></a>
					<a href="#remove"><i class="fa fa-times icon text-err"></i></a>
