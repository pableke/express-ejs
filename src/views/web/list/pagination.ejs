
<div class="pagination">
	<select value="<%=list.size%>" class="input-item">
		<option value="20">20</option>
		<option value="40">40</option>
		<option value="80">80</option>
		<option value="100">100</option>
	</select>

	<% if (list.page > 0) { %>
		<a href="?page=0&size=<%=list.size%>">&laquo;</a>
	<% } %>
	<% for (let i = 0; i <= list.pages; i++) { %>
		<% if (list.page == i) { %>
			<a href="#" class="active"><%=(i+1)%></a>
		<% } else { %>
			<a href="?page=<%=i%>&size=<%=list.size%>"><%=(i+1)%></a>
		<% } %>
	<% } %>
	<% if (list.page < list.pages) { %>
		<a href="?page=<%=list.pages%>&size=<%=list.size%>">&raquo;</a>
	<% } %>
</div>
